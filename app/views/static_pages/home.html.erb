<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
     <div class="col-md-8">
      <h3><%= t ".title_micropost" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".home_welcome" %></h1>

  <h2>
    <%= t ".body1" %>
    <%= link_to t(".title_tut"), t(".url_tut") %>
    <%= t ".body2" %>
  </h2>

  <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: t(".logo_alt")), t(".url_tut") %>
<% end %>
