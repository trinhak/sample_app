<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.microposts.gravatar_for), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
  <%= micropost.content %>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.create.post" %> <%= time_ago_in_words(micropost.created_at) %>
    <%= t "microposts.create.ago" %>
     <% if current_user?(micropost.user) %>
      <%= link_to t("microposts.create.delete"), micropost, method: :delete,
          data: { confirm: t("microposts.create.confirm") } %>
    <% end %>
  </span>
</li>
